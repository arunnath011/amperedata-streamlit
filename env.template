# AmpereData Platform - Environment Variables Template
# Copy this file to .env and update with your values

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_DB=amperedata
POSTGRES_USER=amperedata_user
POSTGRES_PASSWORD=changeme123_REPLACE_IN_PRODUCTION
DATABASE_URL=postgresql+asyncpg://amperedata_user:changeme123@localhost:5432/amperedata

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CELERY_BROKER=redis://localhost:6379/1

# ============================================================================
# Application Configuration
# ============================================================================
DEBUG=false
LOG_LEVEL=info
WORKERS=4
PORT=8000
HOST=0.0.0.0

# ============================================================================
# Security & Authentication
# ============================================================================
SECRET_KEY=GENERATE_RANDOM_SECRET_KEY_HERE
JWT_SECRET_KEY=GENERATE_ANOTHER_RANDOM_KEY_HERE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Cloud Storage (AWS S3)
# ============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=amperedata-files

# ============================================================================
# Monitoring & Logging
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
GRAFANA_PASSWORD=admin_CHANGE_ME

# ============================================================================
# Machine Learning
# ============================================================================
ML_MODEL_PATH=backend/ml/saved_models
ML_AUTO_RETRAIN=false
ML_RETRAIN_INTERVAL_DAYS=30

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=production  # development, staging, production
